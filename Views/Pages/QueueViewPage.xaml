<Page
    x:Class="Player.Views.Pages.QueueViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:Player.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:entities="clr-namespace:Player.Core.Entities"
    xmlns:local="clr-namespace:Player.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="ThisPage"
    Title="Очередь воспроизведения"
    d:DataContext="{d:DesignInstance Type=entities:PlaybackQueue}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Style="{StaticResource AnimatedPageStyle}"
    mc:Ignorable="d">

    <Grid>
        <ListView
            HorizontalContentAlignment="Stretch"
            BorderThickness="0"
            ItemsSource="{Binding Tracks}"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            SelectedItem="{Binding NowPlayingTrack, Mode=OneWay}"
            SelectionChanged="ListViewSelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="Transparent">
                        <Grid
                            Margin="12,4,12,4"
                            HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="0.75*" />
                            </Grid.ColumnDefinitions>

                            <Grid
                                Grid.Column="0"
                                Width="32"
                                Height="32"
                                Margin="0,0,8,0">

                                <Image
                                    VerticalAlignment="Center"
                                    Panel.ZIndex="2"
                                    Source="{Binding Album.CoverTiny}" />
                                <Path
                                    Margin="8"
                                    Panel.ZIndex="1"
                                    Data="{StaticResource icon-audiotrack}"
                                    Fill="Gray"
                                    Stretch="Uniform" />
                            </Grid>

                            <TextBlock
                                Grid.Column="1"
                                Margin="8,8,8,8"
                                VerticalAlignment="Center"
                                FontSize="13"
                                FontWeight="SemiBold"
                                Text="{Binding Title}"
                                TextTrimming="CharacterEllipsis"
                                ToolTip="{Binding Title}" />

                            <ItemsControl
                                Grid.Column="2"
                                Margin="8,0,8,0"
                                VerticalAlignment="Center"
                                ItemsSource="{Binding Artists}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Margin="0,0,3,0"
                                            FontSize="13"
                                            Style="{StaticResource ClickableTextBlockStyle}"
                                            Text="{Binding Name}"
                                            ToolTip="{Binding Name}">
                                            <TextBlock.InputBindings>
                                                <MouseBinding
                                                    Command="{Binding MainViewModel.OpenEntityCommand, ElementName=ThisPage}"
                                                    CommandParameter="{Binding}"
                                                    Gesture="LeftClick" />
                                            </TextBlock.InputBindings>
                                        </TextBlock>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock
                                Grid.Column="3"
                                Margin="8,0,8,0"
                                VerticalAlignment="Center"
                                Cursor="Hand"
                                FontSize="13"
                                Style="{StaticResource ClickableTextBlockStyle}"
                                Text="{Binding Album.Title}"
                                ToolTip="{Binding Album.Title}">
                                <TextBlock.InputBindings>
                                    <MouseBinding
                                        Command="{Binding MainViewModel.OpenEntityCommand, ElementName=ThisPage}"
                                        CommandParameter="{Binding Album}"
                                        Gesture="LeftClick" />
                                </TextBlock.InputBindings>
                            </TextBlock>

                            <TextBlock
                                Grid.Column="4"
                                Margin="8,0,0,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                FontSize="13"
                                Foreground="Gray"
                                Text="{Binding Duration, StringFormat='{}{0:mm\\:ss}'}" />
                        </Grid>
                        <Border.InputBindings>
                            <MouseBinding
                                Command="{Binding MainViewModel.Player.OpenAndPlayCommand, ElementName=ThisPage}"
                                Gesture="LeftClick">
                                <MouseBinding.CommandParameter>
                                    <MultiBinding Converter="{StaticResource UselessButNeededConverter}">
                                        <Binding Path="" />
                                        <Binding
                                            ElementName="ThisPage"
                                            Path="DataContext" />
                                    </MultiBinding>
                                </MouseBinding.CommandParameter>
                            </MouseBinding>
                        </Border.InputBindings>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
